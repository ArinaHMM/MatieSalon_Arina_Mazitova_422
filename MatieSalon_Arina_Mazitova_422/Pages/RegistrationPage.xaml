<Page x:Class="MatieSalon_Arina_Mazitova_422.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatieSalon_Arina_Mazitova_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="100" VerticalAlignment="Top">
                <TextBlock Text="Регистрация" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="ФИО:"/>
                <TextBox x:Name="FullNameTb" Margin="0,5"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="EmailTb" Margin="0,5"/>

                <TextBlock Text="Телефон:"/>
                <TextBox x:Name="PhoneTb" Margin="0,5"/>

                <TextBlock Text="Имя пользователя:"/>
                <TextBox x:Name="UsernameTb" Margin="0,5"/>

                <TextBlock Text="Пароль:"/>
                <PasswordBox x:Name="PasswordTb" Margin="0,5"/>

                <TextBlock Text="Биография:"/>
                <TextBox x:Name="BioTb" Margin="0,5" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Button Content="Зарегистрироваться" Click="RegisterBtn_Click" Margin="0,20,0,0" Background="#4CAF50" Foreground="White" Height="40"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

