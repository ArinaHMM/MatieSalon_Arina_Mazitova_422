<Page x:Class="MatieSalon_Arina_Mazitova_422.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatieSalon_Arina_Mazitova_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="LoginTb" Margin="0,5" />

            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordTb" Margin="0,5" />

            <Button Content="Войти" Click="LoginBtn_Click" Margin="0,20,0,0" Background="#FF2196F3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>