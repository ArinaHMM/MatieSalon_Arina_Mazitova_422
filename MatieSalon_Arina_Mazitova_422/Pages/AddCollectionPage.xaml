<Page x:Class="MatieSalon_Arina_Mazitova_422.Pages.AddCollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatieSalon_Arina_Mazitova_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCollectionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Добавление/Изменение" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Название:"/>
            <TextBox Name="NameTextBox" Width="200" Margin="0,5"/>

            <TextBlock Text="Описание:"/>
            <TextBox Name="DesTextBox" Width="200" Margin="0,5"/>

            <TextBlock Text="Фото" FontSize="16"/>
            <Image x:Name="PreviewImage" Width="150" Height="100" Stretch="UniformToFill"/>
            <Button Content="Выбрать фото" Click="UploadImage_Click"/>

            <Button Name="SaveButton" Content=" Сохранить" Width="150" Height="40" Margin="20" Background="#2ECC71" Foreground="White" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
